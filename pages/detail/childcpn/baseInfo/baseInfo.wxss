/* pages/detail/childcpn/baseInfo.wxss */

.baseInfo{
  padding: 16rpx;
  margin-top: 10rpx;
  border-bottom: 12rpx solid #eee;
  color: #555;
}
.title{
  font-size:32rpx;
}
.price-info{
  margin-top: 18rpx;
}
.new-price {
  color: red;
  font-size: 40rpx;
  margin-left: 14rpx;
}
.old-price{
  margin-left: 10rpx;
  font-size: 28rpx;
  text-decoration: line-through;
}
.discount{
  margin-left: 16rpx;
  padding: 4rpx 6rpx;
  background-color: red;
  font-size: 28rpx;
  color: #fff;
  border-radius: 16rpx;
  position: relative;
  bottom: 12rpx;
}
.sell{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 28rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(200, 200, 200, .6)
}
.service{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}
.service .icon{
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 2rpx;
  right: 2rpx;
}
.service .name {
  font-size: 24rpx;
}
.service-item{
  text-align: center;
}