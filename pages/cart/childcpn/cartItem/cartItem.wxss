/* pages/cart/childcpn/cartitem/cartItem.wxss */
.cartItem{
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  align-items: center;
}
.cartItem .icon{
  width: 60rpx;
}
.cartItem-img{
  margin-left: 10rpx;
  width: 200rpx;
}
.cartItem-img image {
  width: 180rpx;
  height: 240rpx;
  border-radius: 38rpx;
}
.cartItem-other{
  flex: 1;
  width: 300rpx;

}
.cartItem-other .title{
  font-size: 34rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartItem-other .desc{
  margin-top: 20rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartItem-price{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.cartItem-price .price{
  color: red;
  font-size: 40rpx;
}